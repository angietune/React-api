{
    "compilerOptions": {
        "jsx": "react",
        "module": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": ["./src/**/**/*"]
}
